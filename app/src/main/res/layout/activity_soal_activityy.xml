<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SoalActivityy">
    
    <TextView
        android:id="@+id/judulSoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Soal Quis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="20dp"/>
    
    <TextView
        android:id="@+id/soal1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. Bahasa Inggris dari kamu adalah..."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/judulSoal"
        android:layout_marginTop="25dp"
        android:layout_marginStart="15dp"/>
    
    <RadioGroup
        android:id="@+id/rg_soal1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/soal1"
        app:layout_constraintTop_toBottomOf="@id/soal1">

        <RadioButton
            android:id="@+id/rb_they"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="They"
            app:layout_constraintStart_toStartOf="@id/rg_soal1"
            app:layout_constraintTop_toBottomOf="@id/rg_soal1"
            android:layout_marginStart="5dp"/>

        <RadioButton
            android:id="@+id/rb_we"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We"
            app:layout_constraintStart_toStartOf="@id/rg_soal1"
            app:layout_constraintTop_toBottomOf="@id/rg_soal1"
            android:layout_marginStart="5dp"/>

        <RadioButton
            android:id="@+id/rb_you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You"
            app:layout_constraintStart_toStartOf="@id/rg_soal1"
            app:layout_constraintTop_toBottomOf="@id/rg_soal1"
            android:layout_marginStart="5dp"/>

    </RadioGroup>


    <TextView
        android:id="@+id/soal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. Dimana kamu kuliah?"
        app:layout_constraintStart_toStartOf="@id/soal1"
        app:layout_constraintTop_toBottomOf="@id/rg_soal1"
        android:layout_marginTop="15dp"/>

    <RadioGroup
        android:id="@+id/rg_soal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/soal2"
        app:layout_constraintTop_toBottomOf="@id/soal2">

        <RadioButton
            android:id="@+id/rb_uksw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UKSW"
            app:layout_constraintStart_toStartOf="@id/rg_soal2"
            app:layout_constraintTop_toBottomOf="@id/rg_soal2"
            android:layout_marginStart="5dp"/>

        <RadioButton
            android:id="@+id/rb_utdi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UTDI"
            app:layout_constraintStart_toStartOf="@id/rg_soal2"
            app:layout_constraintTop_toBottomOf="@id/rg_soal2"
            android:layout_marginStart="5dp"/>

        <RadioButton
            android:id="@+id/rb_akakom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AKAKOM"
            app:layout_constraintStart_toStartOf="@id/rg_soal2"
            app:layout_constraintTop_toBottomOf="@id/rg_soal2"
            android:layout_marginStart="5dp"/>

    </RadioGroup>

    <Button
        android:id="@+id/selesai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rg_soal2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="SELESAI"/>

</androidx.constraintlayout.widget.ConstraintLayout>